rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // ==================== USERS (Teachers) ====================
    // Teachers can create their own profile (registration)
    // Teachers can read and update their own profile
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && request.auth.uid == userId;
    }
    
    // Teachers can CRUD their own exams
    // Students (anyone) can read exams to take them
    match /exams/{examId} {
      // Anyone can read (students need to access for taking exam)
      allow read: if true;
      
      // Only authenticated teachers can create/update/delete their own exams
      allow create: if request.auth != null 
                    && request.resource.data.teacherId == request.auth.uid;
      allow update, delete: if request.auth != null 
                            && resource.data.teacherId == request.auth.uid;
    }
    
    // ==================== STUDENTS (Soft Auth) ====================
    // Students collection is for metadata-based soft login
    // Anyone can read (to check existing student) and create (new student)
    // No update/delete to prevent tampering
    match /students/{studentId} {
      allow read: if true;
      allow create: if true;
      allow update, delete: if false;
    }
    
    // ==================== SUBMISSIONS ====================
    // Students can create submissions (no auth required for soft login)
    // Teachers can read submissions for their exams
    match /submissions/{submissionId} {
      // Anyone can create (student soft login doesn't have auth)
      allow create: if true;
      
      // Only authenticated teachers can read
      allow read: if request.auth != null;
      
      // No updates or deletes
      allow update, delete: if false;
    }
  }
}
